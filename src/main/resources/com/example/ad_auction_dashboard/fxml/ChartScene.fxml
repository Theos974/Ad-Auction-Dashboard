<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ad_auction_dashboard.controller.ChartSceneController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Time range controls -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Date Range:" />
                <Label text="From:" />
                <DatePicker fx:id="startDatePicker" />

                <Label text="To:" />
                <DatePicker fx:id="endDatePicker" />

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Time Granularity:" />
                <ComboBox fx:id="timeGranularityComboBox" prefWidth="120" />
            </HBox>

            <!-- New: Audience and Context Filters -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: rgba(0,0,0,0.05); -fx-background-radius: 5; -fx-padding: 5;">
                <Label style="-fx-font-weight: bold;" text="Filters:" />

                <Label text="Gender:" />
                <ComboBox fx:id="genderFilterComboBox" prefWidth="100" />

                <Region minWidth="20" HBox.hgrow="ALWAYS" />

                <Label text="Context:" />
                <ComboBox fx:id="contextFilterComboBox" prefWidth="150" />

                <Region minWidth="20" HBox.hgrow="ALWAYS" />

                <Button fx:id="resetFiltersButton" style="-fx-background-color: #555562; -fx-text-fill: white;" text="Reset Filters" />
            </HBox>

            <!-- Chart selection controls -->
            <HBox alignment="CENTER_LEFT" spacing="20">
            <HBox alignment="CENTER" prefHeight="48.0" prefWidth="257.0">
               <children>
                  <ComboBox fx:id="exportComboBox" prefHeight="26.0" prefWidth="115.0" />
                  <Button fx:id="exprtBtn" mnemonicParsing="false" onAction="#exportData" prefHeight="26.0" prefWidth="61.0" text="Export" />
                  <Button fx:id="printButton" mnemonicParsing="false" onAction="#printData" prefHeight="26.0" prefWidth="57.0" text="Print" />
               </children>
            </HBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Primary Chart" />
                    <ComboBox fx:id="primaryChartTypeComboBox" prefWidth="150" />
                </VBox>

                <VBox alignment="CENTER" spacing="5">
                    <Label text="Comparison Chart" />
                    <HBox alignment="CENTER" spacing="10">
                        <ComboBox fx:id="secondaryChartTypeComboBox" prefWidth="150" />
                        <ToggleButton fx:id="compareToggleButton" text="Show Comparison" />
                    </HBox>
                </VBox>
            </HBox>

            <!-- Status message area -->
            <HBox>
                <Label fx:id="statusLabel" style="-fx-text-fill: #555555; -fx-font-style: italic;" />
            <Region prefHeight="26.0" prefWidth="24.0" />
            <Label fx:id="printLabel" />

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#handleBackToMetrics" text="Back to Metrics" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox fx:id="chartsContainer" alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Primary chart container -->
            <VBox fx:id="primaryChartContainer" minHeight="500" minWidth="400" HBox.hgrow="ALWAYS" />

            <!-- Secondary chart container (initially hidden) -->
            <VBox fx:id="secondaryChartContainer" managed="false" minHeight="500" minWidth="400" visible="false" HBox.hgrow="ALWAYS" />
        </HBox>
    </center>
</BorderPane>
