<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ad_auction_dashboard.controller.ChartPaneController" prefWidth="400" prefHeight="300">
    <children>
        <!-- Your LineChart -->
        <LineChart fx:id="lineChart" layoutX="0" layoutY="60" prefWidth="400" prefHeight="240">
            <xAxis>
                <CategoryAxis fx:id="xAxis" label="Time"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Value"/>
            </yAxis>
        </LineChart>
        <!-- Place the button and the ComboBoxes at the top -->
        <Button fx:id="selectMetricButton" text="Select Metric" layoutX="10" layoutY="10" />
        <ComboBox fx:id="metricComboBox" layoutX="150" layoutY="10" prefWidth="120"/>
        <ComboBox fx:id="granularityComboBox" layoutX="280" layoutY="10" prefWidth="100"/>
    </children>
</AnchorPane>
